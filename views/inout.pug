extends layout

block content
	div(class=['ui', 'five', 'column', 'grid'])
		div(class=['column'])
			a(href='/')
				button(class=['ui', 'labeled', 'icon', 'button']) Назад
					i(class=['ui', 'left', 'arrow', 'icon'])
		div(class=['column'])
			h3(class=['ui', 'violet', 'top', 'header'])= 'Продажи на ' + total['sellTotal'].toFixed(2) + ' $'
		div(class=['column'])
			h3(class=['ui', 'violet', 'top', 'header'])= 'Покупки на ' + total['buyTotal'].toFixed(2) + ' $'
		div(class=['column'])
			h3(class=['ui', 'violet', 'top', 'header'])= 'Средняя накрутка ' + total['avPercent'].toFixed(2) + '%'
		div(class=['column'])
			h3(class=['ui', 'violet', 'top', 'header'])= 'Общая прибыль: ' + total['earnings'].toFixed(2) + ' $'
	div(class=['ui', 'clearing', 'divider'])
	table(class=['ui', 'sortable', 'celled', 'structured', 'table'])
		thead
			tr
				th(rowspan=2) Код
				th(rowspan=2) Название
				th(colspan=3) Продажи
				th(colspan=3) Закупки
				th(rowspan=2) Накрутка
				th(rowspan=2) Прибыль
			tr
				th Количество
				th Цена
				th Сумма
				th Количество
				th Посл. цена
				th Сумма
		tbody
			for item in products
				tr
					td= item['sku']
					td= item['goodname']
					td= item['sellq'] + ' $'
					td #{item['sellp'] ? item['sellp'].toFixed(2) : ''}
					td #{item['sellsum'] ? item['sellsum'].toFixed(2) : ''}
					td= item['igq']
					td= item['price'] + ' $'
					td= item['igsum'] + ' $'
					td #{item['percent'] ? item['percent'].toFixed(2) : ''}
					td #{item['debit'] ? item['debit'].toFixed(2) : ''}