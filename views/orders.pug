extends layout

block content
	div(class=['ui', 'five', 'column', 'grid'])
		div(class=['column'])
			a(href='/')
				button(class=['ui', 'labeled', 'icon', 'button']) Назад
					i(class=['ui', 'left', 'arrow', 'icon'])
		div(class=['column'])
			h3(class=['ui', 'violet', 'top', 'header'])= products.length + ' наименований'
		div(class=['column'])
			h3(class=['ui', 'violet', 'top', 'header'])= 'OC - На сумму: ' + sum[0] + ' грн'
		div(class=['column'])
			h3(class=['ui', 'violet', 'top', 'header'])= 'PROM - На сумму: ' + sum[1] + ' грн'
		div(class=['column'])
			h3(class=['ui', 'violet', 'top', 'header'])= 'Итого: ' + sum[2] + ' грн'
	div(class=['ui', 'clearing', 'divider'])
	table(class=['ui', 'sortable', 'celled', 'attached', 'table'])
		thead
			tr
				th Номер
				th Код товара
				th Код магазина
				th Название
				th Приход
				th Продано на проме
				th Продано на oc
				th Общее
				th Остаток
		tbody
			for item, index in products
				tr
					td= index + 1
					td= item['sku']
					td= item['oc_id']
					td= item['name']
					td= item['quantity']
					td= item['promQuantity']
					td= item['ocQuantity']
					td= item['total']
					td= item['inStock']
